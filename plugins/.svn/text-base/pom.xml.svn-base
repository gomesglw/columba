    <module>org.columba.core.WinLAFLookAndFeel</module>
    <module>org.columba.example.ConfigExample</module>
    <module>org.columba.example.CSVAddressbookImportFilter</module>
    <module>org.columba.example.HelloWorldAction</module>
    <module>org.columba.mail.EudoraMailImportFilter</module>
    <module>org.columba.mail.example.attachmenthandler</module>
